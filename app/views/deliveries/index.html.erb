<div class="jumbotron">
  <h1>NextPakk Go</h1>
  <p>The Smart, Secure, Convenient way for package delivery! "We've Got Your Pack"</p>
  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
</div>

<h1>Listing Deliveries</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Size</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= link_to delivery.name, delivery %></td>
        <td><%= link_to delivery.address, "http://maps.google.com/?q=#{delivery.address}" %>          
        </td>      
        <td><%= delivery.phone %></td>
        <td><%= delivery.size %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_delivery_path(delivery), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Delivery', new_delivery_path %>
<% end %>

